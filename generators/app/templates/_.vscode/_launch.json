{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Node (Webpack)",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceRoot}/src/ui",
            "runtimeExecutable": "npm",
            "windows": {
                "runtimeExecutable": "npm.cmd"
            },
            "runtimeArgs": [
                "run-script",
                "debug"
            ],
            "port": 5858
        },
        {
            "name": ".NET Core (Development)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "dev build",
            "program": "${workspaceRoot}/src/server/bin/Debug/netcoreapp2.0/<%=assemblyName%>.UI.dll",
            "args": [],
            "env": {
                "ASPNETCORE_ENVIRONMENT": "development"
            },
            "cwd": "${workspaceRoot}/src/server",
            "externalConsole": false,
            "stopAtEntry": false,
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "name": ".NET Core (Production)",
            "type": "coreclr",
            "request": "launch",
            "program": "${workspaceRoot}/dist/<%=assemblyName%>.UI.dll",
            "args": [],
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Production"
            },
            "cwd": "${workspaceRoot}/dist",
            "externalConsole": true,
            "stopAtEntry": false,
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}